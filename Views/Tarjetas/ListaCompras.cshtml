@model List<WebAppBanco.Models.Compras>

<h1>Compras de la Tarjeta</h1>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Fecha de Compra</th>
                <th>Descripción</th>
                <th>Monto</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var compra in Model)
            {
                <tr>
                    <td>@compra.Fecha</td>
                    <td>@compra.Descripcion</td>
                    <td>@compra.Monto</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hay compras asociadas a esta tarjeta.</p>
}

<a asp-action="Index">Volver a Tarjetas</a>




